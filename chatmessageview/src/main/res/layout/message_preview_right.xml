<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_micro">

    <View
        android:id="@+id/line"
        android:layout_width="@dimen/spacing_line"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="@dimen/spacing_micro" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/spacing_micro">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_micro"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/default_text_short"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/default_text_long"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_tiny" />

    </LinearLayout>

    <com.github.bassaer.chatmessageview.views.RoundImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/width_micro"
        android:layout_height="@dimen/width_micro"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:contentDescription="@string/error"
        android:scaleType="fitXY"
        android:src="@drawable/face_1" />
</LinearLayout>
